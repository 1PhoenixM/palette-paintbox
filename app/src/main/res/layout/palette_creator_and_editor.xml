<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/creator_and_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.palettepaintbox.palettepaintbox.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        app:title="Palette Editor"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/paletteNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Palette Name" />

    <EditText
        android:id="@+id/paletteColorInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hex Code (rrggbb)" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="processNewPalette"
        android:text="Save"
    />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/palette_linear_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
    </LinearLayout>

</LinearLayout>
